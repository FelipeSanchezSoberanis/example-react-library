{
  "$schema": "https://json.schemastore.org/tsconfig.json",
  "compilerOptions": {
    "allowJs": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "dist",
    "declarationMap": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@components": ["src/components"],
      "@utils": ["src/utils"],
      "@themes": ["src/themes"]
    }
  }
}
