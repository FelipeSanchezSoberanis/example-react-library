{
  "$schema": "https://json.schemastore.org/tsconfig.json",
  "compilerOptions": {
    "allowJs": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "dist",
    "declarationMap": true,
    "skipLibCheck": true,
    "baseUrl": "./src",
    "paths": {
      "@components": ["components"],
      "@utils": ["utils"],
      "@themes": ["themes"]
    }
  }
}
